{
    "name": "@juannpz/deno-server-tools",
    "description": "A Deno library for building servers with Hono, offering strongly-typed route parameters, custom and pre-configured middleware, route grouping, and parameter validation.",
    "version": "0.10.0",
    "license": "MIT",
    "author": "juannpz <juannpz@proton.me>",
    "repository": {
        "type": "git",
        "url": "https://github.com/juannpz/deno-server-tools.git"
    },
    "keywords": [
        "deno",
        "server",
        "middleware",
        "tools",
        "http",
        "hono"
    ],
    "exports": "./mod.ts",
    "tasks": {
        "test": "deno test",
        "check": "deno check mod.ts",
        "build:npm": "deno run -A build_npm.ts",
        "publish:jsr": "deno publish",
        "publish:npm": "cd npm && npm publish"
    },
    "imports": {
        "hono": "jsr:@hono/hono@4.7.2"
    },
    "fmt": {
        "include": [
            "src/",
            "tests/",
            "mod.ts",
            "deps.ts"
        ],
        "indentWidth": 2,
        "singleQuote": true
    },
    "lint": {
        "include": [
            "src/",
            "tests/",
            "mod.ts",
            "deps.ts"
        ]
    },
    "publish": {
        "include": [
            "mod.ts",
            "deps.ts",
            "src/",
            "LICENSE",
            "README.md",
            "vendor/"
        ],
        "exclude": [
            "tests/",
            "!vendor/**",
            "vendor/deno.land/x/deno_cache@0.6.2/lib/snippets/#deno_cache_dir-a2aec_8ef02/fs.js",
            "vendor/deno.land/x/ts_morph@20.0.0/common/#denoruntime_552f5.ts"
        ]
    }
}